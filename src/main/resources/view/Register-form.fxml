<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="535.0" prefWidth="573.0" xmlns="http://javafx.com/javafx/21"
            fx:controller="edu.icet.clothify.persistence.RegisterFormController">
    <children>
        <TextField fx:id="txtName" layoutX="144.0" layoutY="221.0" prefHeight="34.0" prefWidth="298.0"
                   promptText="name">
            <font>
                <Font size="15.0"/>
            </font>
        </TextField>
        <TextField fx:id="txtEmail" layoutX="144.0" layoutY="274.0" prefHeight="34.0" prefWidth="298.0"
                   promptText="email">
            <font>
                <Font size="15.0"/>
            </font>
        </TextField>
        <TextField fx:id="txtPassword" layoutX="144.0" layoutY="329.0" prefHeight="34.0" prefWidth="298.0"
                   promptText="password">
            <font>
                <Font size="15.0"/>
            </font>
        </TextField>
        <Button layoutX="224.0" layoutY="454.0" mnemonicParsing="false" onAction="#btnSubmitOnAction" prefHeight="34.0"
                prefWidth="150.0" text="Register">
            <font>
                <Font size="15.0"/>
            </font>
        </Button>
        <Label layoutX="325.0" layoutY="130.0" prefHeight="17.0" prefWidth="63.0" text="User ID :">
            <font>
                <Font name="System Bold" size="15.0"/>
            </font>
        </Label>
        <Label fx:id="lblUserId" layoutX="388.0" layoutY="130.0" prefHeight="17.0" prefWidth="63.0" text="0000">
            <font>
                <Font name="System Bold" size="15.0"/>
            </font>
        </Label>
        <TextField fx:id="txtCompany" disable="true" layoutX="144.0" layoutY="384.0" prefHeight="34.0" prefWidth="298.0"
                   promptText="Company">
            <font>
                <Font size="15.0"/>
            </font>
        </TextField>
        <Label layoutX="162.0" layoutY="7.0" prefHeight="50.0" prefWidth="279.0" text="User Registration">
            <font>
                <Font name="System Bold" size="34.0"/>
            </font>
        </Label>
        <ComboBox fx:id="cmbUserType" layoutX="56.0" layoutY="80.0" onAction="#cmbUserTypeOnAction" prefHeight="34.0"
                  prefWidth="150.0" promptText="Select user type"/>
        <ComboBox fx:id="cmbStaffType" layoutX="56.0" layoutY="123.0" onAction="#cmbStaffTypeOnAction" prefHeight="34.0"
                  prefWidth="150.0" promptText="Select staff type"/>
        <Separator layoutX="22.0" layoutY="190.0" prefHeight="3.0" prefWidth="521.0"/>
        <Separator layoutX="277.0" layoutY="75.0" orientation="VERTICAL" prefHeight="99.0" prefWidth="0.0"/>
        <ComboBox fx:id="cmbStaffId" layoutX="313.0" layoutY="80.0" prefHeight="34.0" prefWidth="150.0"
                  promptText="Select staff type"/>

    </children>
