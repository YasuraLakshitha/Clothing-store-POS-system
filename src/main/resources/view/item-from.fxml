<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="583.0" prefWidth="763.0" xmlns="http://javafx.com/javafx/21"
            fx:controller="edu.icet.clothify.persistence.ItemFormController">
    <children>
        <TextField fx:id="txtItemBrand" layoutX="437.0" layoutY="106.0" prefHeight="32.0" prefWidth="291.0"
                   promptText="Item Brand">
            <font>
                <Font size="13.0"/>
            </font>
        </TextField>
        <TextField fx:id="txtItemPrice" layoutX="212.0" layoutY="443.0" prefHeight="32.0" prefWidth="131.0"
                   promptText="Product Price"/>
        <TextField fx:id="txtItemQty" layoutX="35.0" layoutY="443.0" prefHeight="32.0" prefWidth="131.0"
                   promptText="Quantity">
            <font>
                <Font size="13.0"/>
            </font>
        </TextField>
        <Button fx:id="btnAddItem" layoutX="474.0" layoutY="326.0" mnemonicParsing="false"
                onAction="#btnAddItemOnAction" prefHeight="32.0" prefWidth="217.0" text="Add item"/>
        <Button layoutX="474.0" layoutY="375.0" mnemonicParsing="false" onAction="#btnUpdateOnAction" prefHeight="32.0"
                prefWidth="217.0" text="Update item"/>
        <Button fx:id="btnSearch" disable="true" layoutX="235.0" layoutY="158.0" mnemonicParsing="false"
                onAction="#btnSearchOnAction" prefHeight="32.0" prefWidth="108.0" text="Search"/>
        <Label layoutX="325.0" layoutY="14.0" text="Item panel">
            <font>
                <Font name="System Bold" size="29.0"/>
            </font>
        </Label>
        <Label layoutX="35.0" layoutY="109.0" prefHeight="26.0" prefWidth="73.0" text="Staff ID :">
            <font>
                <Font name="System Bold" size="17.0"/>
            </font>
        </Label>
        <Label fx:id="lblStaffID" layoutX="111.0" layoutY="111.0" prefHeight="25.0" prefWidth="73.0" text="EMP001">
            <font>
                <Font name="System Bold" size="16.0"/>
            </font>
        </Label>
        <TextField fx:id="txtItemId" disable="true" layoutX="35.0" layoutY="158.0" prefHeight="32.0" prefWidth="171.0"
                   promptText="Item ID">
            <font>
                <Font size="13.0"/>
            </font>
        </TextField>
        <ComboBox fx:id="cmbCategoryType" layoutX="35.0" layoutY="217.0" onAction="#categoryTypeOnAction"
                  prefHeight="32.0" prefWidth="217.0" promptText="Select Category"/>
        <ComboBox fx:id="cmbItemSize" layoutX="35.0" layoutY="362.0" prefHeight="32.0" prefWidth="131.0"
                  promptText="Select item size"/>
        <TextArea fx:id="txtItemDescription" layoutX="437.0" layoutY="174.0" prefHeight="126.0" prefWidth="291.0"
                  promptText="Product Description">
            <font>
                <Font size="13.0"/>
            </font>
        </TextArea>
        <Button fx:id="btnDeleteItem" layoutX="474.0" layoutY="427.0" mnemonicParsing="false"
                onAction="#btnDeleteItemOnAction" prefHeight="32.0" prefWidth="217.0" text="Delete item"/>
        <Separator layoutX="381.0" layoutY="101.0" orientation="VERTICAL" prefHeight="458.0" prefWidth="34.0"/>
        <ComboBox fx:id="cmbSupplierId" layoutX="235.0" layoutY="108.0" prefHeight="32.0" prefWidth="131.0"
                  promptText="Supplier ID"/>
        <ComboBox fx:id="cmbProductType" layoutX="35.0" layoutY="284.0" onAction="#cmbProductTypeOnAction"
                  prefHeight="32.0" prefWidth="217.0" promptText="Select Product Type"/>
        <RadioButton fx:id="chkSearchBtn" layoutX="42.0" layoutY="520.0" mnemonicParsing="false"
                     onAction="#chkSearchModeOnAction" prefHeight="20.0" prefWidth="122.0" text="Search mode">
            <font>
                <Font size="14.0"/>
            </font>
        </RadioButton>
        <Button fx:id="btnClear" layoutX="474.0" layoutY="488.0" mnemonicParsing="false" onAction="#btnClearOnAction"
                prefHeight="32.0" prefWidth="217.0" text="Clear fields"/>
    </children>
</AnchorPane>
