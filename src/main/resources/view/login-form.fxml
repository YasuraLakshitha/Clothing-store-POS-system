<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="436.0" prefWidth="448.0" xmlns="http://javafx.com/javafx/21"
            fx:controller="edu.icet.clothify.persistence.LoginPageFormController">
    <children>
        <Label layoutX="149.0" layoutY="14.0" text="User Login">
            <font>
                <Font name="System Bold" size="32.0"/>
            </font>
        </Label>
        <TextField fx:id="txtEmail" layoutX="90.0" layoutY="151.0" prefHeight="37.0" prefWidth="243.0"
                   promptText="Enter email">
            <font>
                <Font size="15.0"/>
            </font>
        </TextField>
        <TextField fx:id="txtPassword" layoutX="90.0" layoutY="201.0" prefHeight="37.0" prefWidth="243.0"
                   promptText="Enter password">
            <font>
                <Font size="15.0"/>
            </font>
        </TextField>
        <Button layoutX="131.0" layoutY="263.0" mnemonicParsing="false" onAction="#btnLoginOnAction" prefHeight="31.0"
                prefWidth="161.0" text="Login"/>
        <Button layoutX="131.0" layoutY="307.0" mnemonicParsing="false" onAction="#btnRegisterOnAction"
                prefHeight="31.0" prefWidth="161.0" text="Register"/>
        <Button fx:id="btnChangePassword" layoutX="131.0" layoutY="357.0" mnemonicParsing="false"
                onAction="#btnChangePasswordOnAction" prefHeight="31.0" prefWidth="161.0" text="Change Password"/>
        <ComboBox fx:id="cmbUserType" layoutX="90.0" layoutY="95.0" prefHeight="37.0" prefWidth="161.0"
                  promptText="Select user type"/>
    </children>
</AnchorPane>
