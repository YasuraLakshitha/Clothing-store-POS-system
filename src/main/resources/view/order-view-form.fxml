<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>

<FlowPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21"
          fx:controller="edu.icet.clothify.persistence.OrderViewFormController">
    <children>
        <AnchorPane prefHeight="565.0" prefWidth="794.0">
            <children>
                <TableView fx:id="tblView" layoutX="16.0" layoutY="146.0" prefHeight="382.0" prefWidth="517.0">
                    <columns>
                        <TableColumn fx:id="colOrderId" prefWidth="75.0" text="Order ID"/>
                        <TableColumn fx:id="colEmployeeId" prefWidth="75.0" text="Employee ID"/>
                        <TableColumn fx:id="colOrderDate" prefWidth="75.0" text="Order Date"/>
                        <TableColumn fx:id="colCustomerId" prefWidth="75.0" text="Customer ID"/>
                        <TableColumn fx:id="colCustomerName" prefWidth="120.0" text="Customer Name"/>
                        <TableColumn fx:id="colNetAmount" prefWidth="96.0" text="Net amount"/>
                    </columns>
                </TableView>
                <TableView fx:id="tblProduct" layoutX="552.0" layoutY="146.0" prefHeight="382.0" prefWidth="203.0">
                    <columns>
                        <TableColumn fx:id="colProduct" prefWidth="117.0" text="Product"/>
                        <TableColumn fx:id="colQty" prefWidth="85.0" text="Quantity"/>
                    </columns>
                </TableView>
                <ComboBox fx:id="cmbSearch" layoutX="16.0" layoutY="100.0" onAction="#cmbSearchOnAction"
                          prefHeight="36.0" prefWidth="175.0" promptText="Search Customer"/>
                <TextField fx:id="txtId" layoutX="206.0" layoutY="100.0" onKeyTyped="#txtIdOnKeyTyped" prefHeight="36.0"
                           prefWidth="167.0" promptText="Customer ID">
                    <font>
                        <Font size="15.0"/>
                    </font>
                </TextField>
                <Button layoutX="386.0" layoutY="100.0" mnemonicParsing="false" onAction="#btnSearchOnAction"
                        prefHeight="36.0" prefWidth="115.0" text="Search"/>
                <Label layoutX="252.0" layoutY="28.0" text="View Order/Customer">
                    <font>
                        <Font name="System Bold" size="25.0"/>
                    </font>
                </Label>
                <RadioButton fx:id="radioCustomer" layoutX="552.0" layoutY="110.0" mnemonicParsing="false"
                             onAction="#radioCustomerOnAction" text="Customer"/>
                <RadioButton fx:id="radioOrder" layoutX="654.0" layoutY="110.0" mnemonicParsing="false"
                             onAction="#radioOrderOnAction" text="Order"/>
            </children>
        </AnchorPane>
    </children>
</FlowPane>
